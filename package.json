{
  "name": "pokemon-shiny-hunt-tracker",
  "version": "0.9.0",
  "description": "A simple tracker for Pokemon shiny hunts with transparent background for streaming",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build:exe": "pkg . --targets node18-win-x64 --output-path dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "scripts": ["server.js"],
    "assets": [
      "index.html",
      "style.css",
      "script.js"
    ],
    "targets": ["node18-win-x64"],
    "outputPath": "dist"
  },
  "keywords": ["pokemon", "shiny", "tracker", "streaming"],
  "author": "",
  "license": "MIT"
}
